.login-container {
  padding: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 30rpx;
}

.phone-input, .code-input {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 20rpx 0;
}

.prefix {
  color: #333;
  margin-right: 20rpx;
}

input {
  flex: 1;
  font-size: 28rpx;
}

.send-code-btn {
  width: 200rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #f84012;
  color: #fff;
  border-radius: 30rpx;
}

.send-code-btn.disabled {
  background: #ccc;
}

.agreement {
  margin: 40rpx 0;
  font-size: 24rpx;
  color: #666;
}

.agreement checkbox {
  transform: scale(0.7);
  margin-right: 8rpx;
}

.link {
  color: #f84012;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f84012;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
  text-align: center;
}

.login-btn.disabled {
  background: #ccc;
}