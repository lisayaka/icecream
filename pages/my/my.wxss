.mine-container {

  position: relative;
  min-height: 100vh;
}




.login-area {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F5CBA7;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  display: flex;
  align-items: center;
}

.circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #F5CBA7;
  margin-right: 30rpx;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* 让图片处于最底层 */
  background-color: #FFF5F5; /* 使用填充颜色替代背景图片 */
}

.function-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background-color: #FFF;
  padding: 20rpx;
  border-radius: 30rpx;
}

.button-item {
  width: 18%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 15rpx 0;
  text-align: center;
  display: flex; /* 使用 flex 布局 */
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center; /* 子元素水平居中 */
  justify-content: center; /* 子元素垂直居中 */
}

.button-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.after-sale-button {
  background-color: #F5CBA7;
  padding: 20rpx;
  text-align: center;
  margin-top: 0;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #F5CBA7;
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
}

.nav-item {
  text-align: center;
}

.nav-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

/* 蒙版样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 登录注册模态框样式 */
.login-register-modal {
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.login-register-modal button {
  margin: 15rpx 0;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  background-color: #966941;
  color: #ffffff;
  border: none;
  outline: none;
  transition: background-color 0.3s ease;
  width: 80%; /* 让按钮宽度统一 */
}

.login-register-modal button:hover {
  background-color: #966941;
}

.login-register-modal button:last-child {
  background-color: #e5e5e5;
  color: #333333;
}

.login-register-modal button:last-child:hover {
  background-color: #d4d4d4;
}

/* 新增样式 */
.fixed-avatar {
  position: fixed;
  bottom: 20%; /* 距离底部 20%，可按需调整 */
  left: 50%;
  transform: translateX(-50%); /* 水平居中 */
  width: 100vw; /* 设置图片宽度，可按需调整 */
  height: 50vh; /* 设置图片高度，可按需调整 */
  object-fit: cover; /* 图片填充方式 */
  z-index: 1; /* 设置层级，避免被其他元素覆盖 */
}

