/* 整体容器样式 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}
.payment-icon {
  width: 30rpx;
  height: 50rpx;
  margin: 0 20rpx;
}


/* 收货地址样式 */
.address {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.address text {
  font-size: 28rpx;
  color: #333;
}

/* 商品列表样式 */
.product-list {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item text {
  font-size: 26rpx;
  color: #666;
}

/* 总价样式 */
.total-price {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  text-align: right;
}

.total-price text {
  font-size: 30rpx;
  color: #ff4500;
  font-weight: bold;
}

/* 支付方式样式 */
.payment-method {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.payment-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.payment-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.payment-option {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

/* 修改单选框大小 */
.payment-option radio {
  transform: scale(0.8);
  margin-right: 10rpx;
}

/* 支付按钮样式 */
button {
  background-color: #ff4500;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  border: none;
  outline: none;
}

button:hover {
  background-color: #e63900;
}