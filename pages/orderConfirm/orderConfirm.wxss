.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 让图片处于最底层 */
  background-color: #FFF5F5; /* 使用填充颜色替代背景图片 */
}
.payment-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.payment-ali-icon {
  width: 35rpx;
  height: 50rpx;
  margin: 0 20rpx;
}

/* 支付按钮底部固定样式 */
.pay-btn {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  margin-top: 30rpx;
  height: 100rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 收货地址样式 */
.address {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.address text {
  font-size: 28rpx;
  color: #333;
}

/* 商品列表样式 */
.product-list {
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item text {
  font-size: 26rpx;
  color: #666;
}

/* 总价样式 */
.total-price {
  padding: 0rpx 20rpx;
  color: #ff4500;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-price-text {
  font-size: 30rpx;
  font-weight: bold;
}

.total-price-value {
  font-size: 30rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 10rpx;
}

/* 支付方式样式 */
.payment-method {
  padding: 20rpx;
  border-radius: 10rpx;
}

.payment-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.payment-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.payment-option {
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 20rpx;
  height: 80rpx;
  border-radius: 20rpx;
}

/* 修改单选框大小 */
.payment-option radio {
  transform: scale(0.8);
  margin-right: 10rpx;
}

/* 支付按钮样式 */
button {
  background-color: #ff4500;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  border: none;
  outline: none;
}

button:hover {
  background-color: #e63900;
}

/* 商品表格样式 */
.product-table {
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-col {
  font-size: 26rpx;
  color: #666;
}

.product-name {
  flex: 2;
  text-align: left;
}

.product-quantity {
  flex: 1;
  text-align: left;
}

.product-price {
  flex: 1;
  text-align: left;
}