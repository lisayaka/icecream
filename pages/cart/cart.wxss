.container {
  padding-bottom: 0;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* 让图片处于最底层 */
  background-color: #FFF5F5; /* 使用填充颜色替代背景图片 */
}


.custom-checkbox {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #1065aa;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkmark {
  width: 17rpx;
  height: 17rpx;
  background-color: #f17e32;
}

.cart-items {
  padding: 10rpx;
  padding-bottom: 230rpx; /* 增加底部内边距，为调整后的bottom-bar和tabbar留出更多空间 */
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  background-color: #ffffff;
  margin: 20rpx auto;
  width: 700rpx;
  height: 200rpx;
  border-radius: 40rpx;
}

.product-img {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
}

.product-info {
  flex: 1;
}

.title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.price {
  font-size: 30rpx;
  color: #f00;
}

.quantity {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e5e5e5;
  background-color: #f5f5f5;
  margin: 0 20rpx;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: bold;
}

.quantity text {
  min-width: 40rpx;
  text-align: center;
}

.quantity button {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e5e5e5;
  background-color: #f5f5f5;
  margin: 0 20rpx;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0;
  line-height: 1;
}

.delete-btn {
  color: #1065aa;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  min-width: 100rpx;
  /* 设置最小宽度 */
  max-width: 130rpx;
  /* 设置最大宽度 */
  text-align: center;
  /* 让文字居中显示 */
}

/* 其他样式保持不变 */

.bottom-bar {
  position: fixed;
  bottom: 170rpx; /* 增加底部间距，确保在tabBar上方有足够空间 */
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  box-sizing: border-box;
  z-index: 999;
  height: 100rpx; /* 调整高度确保全选按钮完全显示 */
}

.left-section {
  display: flex;
  align-items: center;
  gap: 15rpx; /* 增加间距，使全选文字和复选框有更好的间隔 */
  padding-left: 10rpx; /* 增加左侧内边距 */
}

.left-section text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.right-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-right: 10rpx; /* 增加右侧内边距 */
}

.total-price {
  font-size: 35rpx;
  color: rgb(250, 25, 25);
  font-weight: bold;
}

.pay-btn {
  background-color: #f84012;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  min-width: 100rpx;
  max-width: 150rpx;
  /* 添加 flex-shrink: 0 防止按钮被压缩 */
  flex-shrink: 0;
}